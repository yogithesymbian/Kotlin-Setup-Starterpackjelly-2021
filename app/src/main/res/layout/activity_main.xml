<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:text="@string/subscribe_to_weather"
        app:layout_constraintEnd_toEndOf="@+id/txt_hello"
        app:layout_constraintStart_toStartOf="@+id/txt_hello"
        app:layout_constraintTop_toBottomOf="@+id/txt_hello" />

    <Button
        android:id="@+id/logTokenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/log_token"
        app:layout_constraintEnd_toEndOf="@+id/subscribeButton"
        app:layout_constraintStart_toStartOf="@+id/subscribeButton"
        app:layout_constraintTop_toBottomOf="@+id/subscribeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>